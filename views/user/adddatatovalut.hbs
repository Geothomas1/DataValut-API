<section>
  <div class="row">
    <div class="col-md-6 m-auto">
      <div class="container mt-5 pl-5">
        <h2>Add Data to DataValut</h2>
        <br>
        <form method="POST" action="/channels/:channelName/chaincodes/:chaincodeName">
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputid">Id</label>
              <input type="text" class="form-control" id="Id" placeholder="Id" name="Id" required>
            </div>
            <div class="form-group col-md-6">
              <label for="inputdataid">Data Id</label>
              <input type="text" class="form-control" id="Data_Id" placeholder="Data Id" name="Data_Id" required>
            </div>
          </div>
          <div class="form-group">
            <label for="inputemail">Email</label>
            <input type="email" class="form-control" id="Email" placeholder="Email" name="Email" required>
          </div>
          <div class="form-group">
            <label for="inputphone">Phone Number</label>
            <input type="phone" class="form-control" id="Phone" placeholder="Phone" name="Phone" required>
          </div>
          <div class="form-row">

            <input type="hidden" name="fcn" id="fcn" value="createDatavalut">
            <input type="hidden" name="chaincodeName" id="chaincodeName" value="datavalut">
            <input type="hidden" name="channelName" id="channelName" value="mychannel">
            <input type="hidden" name="peer0" id="peer0" value="peer0.org1.example.com">
            <input type="hidden" name="peer1" id="peer1" value="peer0.org2.example.com">




          </div>

          <button type="submit" class="btn btn-primary">Add Data</button>
        </form>
      </div>
    </div>
  </div>
</section>